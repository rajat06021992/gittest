{
	"manifest_version": 2,
	"name": "theMoment.tv",
	"short_name": "#moment",
	"description": "Tell your story with moments from Twitch and YouTube.",
	"version": "1.0.0.64",
	"background": {
        "scripts": [
        	"js/lib/jquery-2.1.3.min.js",
            "js/background.js"
        ]
    },
	"content_scripts": [
		{
			"matches": [
							"http://app-dev.themoment.tv/*",
							"http://app_dev.themoment.tv/*",
							"http://app-stage.themoment.tv/*",
							"http://app_stage.themoment.tv/*",
							"http://localhost/*",
							"http://www.themoment.tv/*",
							"http://themoment.tv/*",
							"https://www.youtube.com/",
							"https://www.youtube.com/watch?v=*",
							"http://www.twitch.tv/*"
						],
			"css": ["css/font-awesome.min.css","css/bootstrap-glyphicon-carousel.css","scss/style.css"],
			"js": ["js/lib/jquery-2.1.3.min.js","js/lib/bootstrap.min.js","js/lib/jquery.preloader.js","js/lib/analytics.js","js/ga.js","js/lib/swfobject.js","js/core.js","js/lib/md5.js"]
		}
		],
	"icons": {
			"16":  "images/extension_merchandising_icons/extension_merchandising_icon_16x16.png",
			"32":  "images/extension_merchandising_icons/extension_merchandising_icon_32x32.png",
			"48":  "images/extension_merchandising_icons/extension_merchandising_icon_48x48.png",
			"128": "images/extension_merchandising_icons/extension_merchandising_icon_128x128.png"},
	"browser_action": {
		"default_icon": "images/extension_merchandising_icons/extension_merchandising_icon_128x128.png",
		"default_popup": "popup.html"
		},
	"permissions": [
			"tabs","https://api.twitch.tv/*","notifications"
		],
	"web_accessible_resources": ["template/*","js/*","css/*","fonts/*","images/*","app_env_config.json"]
}
